{
	"name": "ulid-hex-converter",
	"displayName": "ULID hex converter",
	"description": "Convert ULID to hex, or vice versa.",
	"license": "MIT",
	"publisher": "h-yon",
	"author": "Hibiki Yonahara",
	"icon": "icon.png",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/h-yon/vscode-ulid-hex-converter.git"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"virtualWorkspaces": false,
		"untrustedWorkspaces": {
			"supported": false
		},
		"menus": {
			"editor/context": [
				{
					"command": "ulid-hex-converter.encode",
					"when": "editorHasSelection"
				}
			]
		},
		"commands": [
			{
				"command": "ulid-hex-converter.encode",
				"title": "Convert hex to ULID"
			}
		]
	},
	"scripts": {
		"release": "standard-version",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.65.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"standard-version": "^9.3.2",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"ulid": "^2.3.0"
	}
}
